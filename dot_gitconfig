[core]
	editor = nvim
	autocrlf = false
	longpaths = true
  pager = delta

[interactive]
  diffFilter = delta --color-only

[delta]
  features = catppuccin-mocha
  navigate = true
  dark = true
  # light = true
  side-by-side = true
  line-numbers = true
  show-syntax-themes = true
  hyperlinks = true
  ; hyperlinks-file-link-format = "vscode://file/{path}:{line}"


[merge]
  conflictstyle = diff3

[diff]
  colorMoved = default

[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process

